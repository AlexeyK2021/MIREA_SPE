<resources>
    <!-- Base application theme. -->
    <style name="Theme.AutoCost" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">@color/black</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/spaceGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">#212121</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="TextSmall" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Alert Dialog Color -->
    <style name="alertdialog_buttons_color">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="buttonBarPositiveButtonStyle">@style/positive_btn_color</item>
        <item name="buttonBarNegativeButtonStyle">@style/negative_btn_color</item>
    </style>

    <style name="positive_btn_color">
        <item name="android:textColor">@color/delete</item>
    </style>

    <style name="negative_btn_color">
        <item name="android:textColor">@color/dismiss</item>
    </style>
</resources>