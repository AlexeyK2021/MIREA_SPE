<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutoCost" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/spaceGray</item>
        <item name="colorSecondaryVariant">@color/spaceGray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor">@color/black</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/spaceGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">#212121</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="TextSmall" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>