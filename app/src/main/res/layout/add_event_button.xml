<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_event_button"
    android:background="@drawable/frog_element_background_black">

    <TextView
        android:id="@+id/new_event_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_event_text"
        android:textColor="@color/white"
        android:textSize="16sp"

        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/new_event_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_add_24"

        app:layout_constraintTop_toTopOf="@+id/new_event_text"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        app:layout_constraintTop_toBottomOf="@+id/new_event_text"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>