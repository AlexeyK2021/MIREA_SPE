<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".fragments.MainFragment">

    <ImageView
        android:id="@+id/settingsButton"
        android:layout_height="48dp"
        android:layout_width="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_settings" />

    <ImageView
        android:id="@+id/editAutoButton"
        android:layout_height="48dp"
        android:layout_width="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_settings" />

    <ImageView
        android:id="@+id/autoImage"
        android:layout_height="164dp"
        android:layout_width="164dp"
        app:layout_constraintTop_toBottomOf="@+id/editAutoButton"
        app:layout_constraintStart_toEndOf="@+id/settingsButton"
        app:layout_constraintEnd_toStartOf="@id/editAutoButton"
        android:src="@drawable/baseline_settings" />

    <ImageView
        android:id="@+id/oilImage"
        android:layout_height="64dp"
        android:layout_width="64dp"
        app:layout_constraintTop_toBottomOf="@id/autoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/checksImage"
        android:src="@drawable/baseline_settings" />

    <ImageView
        android:id="@+id/checksImage"
        android:layout_height="64dp"
        android:layout_width="64dp"
        app:layout_constraintTop_toBottomOf="@id/autoImage"
        app:layout_constraintStart_toEndOf="@id/oilImage"
        app:layout_constraintEnd_toStartOf="@id/repairImage"
        android:src="@drawable/baseline_settings" />

    <ImageView
        android:id="@+id/repairImage"
        android:layout_height="64dp"
        android:layout_width="64dp"
        app:layout_constraintTop_toBottomOf="@id/autoImage"
        app:layout_constraintStart_toEndOf="@id/checksImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/baseline_settings" />

    <ImageView
        android:id="@+id/moreExpencesImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/checksImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/baseline_keyboard_arrow_down_24" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fineButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="ПДД"
        app:layout_constraintTop_toBottomOf="@+id/moreExpencesImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pddButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/fines"
        app:layout_constraintTop_toBottomOf="@+id/fineButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>