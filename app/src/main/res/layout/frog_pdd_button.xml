<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pdd_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/frog_button_background_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/penalties_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/book_icon"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/penalties_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pdd"
        android:textColor="@color/white"
        android:textSize="20sp"

        android:layout_marginStart="22dp"
        app:layout_constraintTop_toTopOf="@id/penalties_image"
        app:layout_constraintStart_toEndOf="@+id/penalties_image"
        app:layout_constraintBottom_toBottomOf="@id/penalties_image"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-90"
        android:src="@drawable/baseline_keyboard_arrow_down_24"

        app:layout_constraintTop_toTopOf="@+id/penalties_image"
        app:layout_constraintBottom_toBottomOf="@+id/penalties_image"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>