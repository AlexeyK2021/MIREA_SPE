<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp"
            android:background="#212121"
            android:id="@+id/constraintWastes">

            <ImageView
                android:id="@+id/imageWastes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_name"
                app:layout_constraintVertical_bias="0.05"
                app:layout_constraintStart_toStartOf="@id/constraintWastes"
                app:layout_constraintBottom_toBottomOf="@id/constraintWastes"
                app:layout_constraintTop_toTopOf="@id/constraintWastes"/>

            <TextView
                android:id="@+id/textWastes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="Ремонт"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintTop_toTopOf="@id/imageWastes"
                app:layout_constraintBottom_toBottomOf="@id/imageWastes"
                app:layout_constraintStart_toEndOf="@id/imageWastes"
                app:layout_constraintEnd_toStartOf="@id/costWastes"/>

            <TextView
                android:id="@+id/costWastes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="500 rub"
                app:layout_constraintEnd_toEndOf="@id/constraintWastes"
                app:layout_constraintTop_toTopOf="@id/textWastes" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_wastes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingEnd="30dp"
                android:paddingStart="50dp"
                tools:listitem="@layout/wates_card_recycler_item"
                app:layout_constraintTop_toBottomOf="@id/imageWastes"
                app:layout_constraintStart_toStartOf="@id/constraintWastes"
                app:layout_constraintEnd_toEndOf="@id/constraintWastes"/>

            <ImageView
                android:id="@+id/oke_galya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_oke"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/recycler_wastes"
                app:layout_constraintStart_toStartOf="@id/recycler_wastes"/>

            <EditText
                android:id="@+id/newWastesEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/rectangle_214"
                android:layout_marginStart="20dp"
                android:paddingStart="10dp"
                android:hint="New wastes"
                app:layout_constraintStart_toEndOf="@id/oke_galya"
                app:layout_constraintTop_toTopOf="@id/oke_galya"
                app:layout_constraintBottom_toBottomOf="@id/oke_galya"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/rectangle_214"
                android:layout_marginVertical="10dp"
                android:paddingStart="10dp"
                android:hint="Cost"
                app:layout_constraintStart_toStartOf="@id/newWastesEdit"
                app:layout_constraintEnd_toEndOf="@id/newWastesEdit"
                app:layout_constraintTop_toBottomOf="@id/newWastesEdit"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="CardView"
        app:barrierDirection="bottom"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        app:layout_constraintTop_toBottomOf="@id/barrier"/>

</androidx.constraintlayout.widget.ConstraintLayout>